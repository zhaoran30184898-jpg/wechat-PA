# ===== 微信公众号配置 =====
WECHAT_APP_ID=your_app_id_here
WECHAT_APP_SECRET=your_app_secret_here
WECHAT_TOKEN=your_token_here
WECHAT_ENCODING_AES_KEY=your_encoding_aes_key_here

# ===== AI提供商配置 =====
# 选择使用的AI提供商: claude, gemini, glm
AI_PROVIDER=gemini

# Claude AI 配置 (可选)
ANTHROPIC_API_KEY=your_claude_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# Google Gemini 配置
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# 智谱 GLM 配置
GLM_API_KEY=your_glm_api_key_here
GLM_MODEL=glm-4-plus
GLM_MAX_TOKENS=4096
GLM_TEMPERATURE=0.7

# ===== Google Search API 配置 =====
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here
GOOGLE_SEARCH_NUM_RESULTS=10

# ===== 应用配置 =====
APP_ENV=development
APP_LOG_LEVEL=INFO
APP_TIMEZONE=Asia/Shanghai

# ===== 文章处理配置 =====
ARTICLE_LANGUAGE=en
TARGET_LANGUAGE=zh-CN
ARTICLE_MIN_LENGTH=500
ARTICLE_MAX_LENGTH=10000

# ===== 图片处理配置 =====
IMAGE_MAX_WIDTH=1080
IMAGE_QUALITY=85
IMAGE_MAX_SIZE_MB=5

# ===== 微信发布配置 =====
PUBLISH_AUTO_DRAFT=true
PUBLISH_AUTO_PUBLISH=false
PUBLISH_SCHEDULE_TIME=

# ===== 重试配置 =====
HTTP_MAX_RETRIES=3
HTTP_RETRY_DELAY=1
API_RATE_LIMIT=10

# ===== 存储配置 =====
TEMP_IMAGE_DIR=./temp
TEMP_IMAGE_RETENTION_HOURS=24
LOG_DIR=./logs
LOG_RETENTION_DAYS=30
